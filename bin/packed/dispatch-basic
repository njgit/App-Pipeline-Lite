          my $App_Pipeline_Lite = App::Pipeline::Lite4->new( pipeline_dir => $args->[0]);      
          my $run_num = $App_Pipeline_Lite->last_run_num;
          if(defined $opt->{run}){     
             $run_num = $opt->{run};
